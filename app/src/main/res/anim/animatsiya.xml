<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
   <alpha
       android:fromAlpha="0"
       android:toAlpha="1"
       android:duration="5000"/>

    <rotate
        android:duration="1000"
        android:fromDegrees="0"
        android:pivotY="50%"
        android:pivotX="50%"
        android:toDegrees="360"/>
    <rotate
        android:duration="1000"
        android:fromDegrees="0"
        android:pivotY="50%"
        android:pivotX="50%"
        android:toDegrees="360"/>
    <rotate
        android:duration="1000"
        android:fromDegrees="0"
        android:pivotY="50%"
        android:pivotX="50%"
        android:toDegrees="360"/>
    <scale
        android:duration="2000"
        android:fromXScale="1"
        android:fromYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1"
        />
    <scale
        android:duration="2000"
        android:fromYScale="1.0"
        android:fromXScale="1.0"
        android:pivotY="50%"
        android:pivotX="55%"
        android:toYScale="0.5"
        android:toXScale="0.5"
        />
    <scale
        android:duration="2000"
        android:fromXScale="1"
        android:fromYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1"
        />



</set>